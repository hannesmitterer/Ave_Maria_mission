    <!-- JavaScript f√ºr Copy-to-Clipboard (Standard-Fallbacks) -->
    <script>
        function copyToClipboard(text) {
            const el = document.createElement('textarea');
            el.value = text;
            el.setAttribute('readonly', '');
            el.style.position = 'absolute';
            el.style.left = '-9999px';
            document.body.appendChild(el);
            el.select();
            
            let success = false;
            try {
                success = document.execCommand('copy');
            } catch (err) {
                console.error('Could not copy text: ', err);
            }
            
            document.body.removeChild(el);
            
            const messageBox = document.createElement('div');
            messageBox.textContent = success ? `Text f√ºr '${text.substring(0, 30)}...' kopiert!` : 'Kopieren fehlgeschlagen.';
            messageBox.style.cssText = `
                position: fixed;
                bottom: 20px;
                left: 50%;
                transform: translateX(-50%);
                background-color: ${success ? '#10B981' : '#EF4444'};
                color: white;
                padding: 10px 20px;
                border-radius: 8px;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                z-index: 1000;
                opacity: 0;
                transition: opacity 0.3s, transform 0.3s;
                font-size: 14px;
            `;
            document.body.appendChild(messageBox);
            
            // Show message
            setTimeout(() => {
                messageBox.style.opacity = '1';
                messageBox.style.transform = 'translate(-50%, 0)';
            }, 50);
            
            // Hide message
            setTimeout(() => {
                messageBox.style.opacity = '0';
                messageBox.style.transform = 'translate(-50%, 20px)';
                messageBox.addEventListener('transitionend', () => messageBox.remove());
            }, 3000);
        }
    </script>

